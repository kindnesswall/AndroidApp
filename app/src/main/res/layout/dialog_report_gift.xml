<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

	<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
		android:id="@+id/message_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:text="لطفا علت گزارش را بنویسید:"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="18dp"/>

	<ir.hamed_gh.divaremehrabani.customviews.edit_text.EditTextIranSans
		android:id="@+id/message_et"
		android:layout_width="match_parent"
		android:layout_height="150dp"

		android:gravity="right"
		android:inputType="textMultiLine"

		android:layout_below="@id/message_textview"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="18dp"/>

	<com.andexert.library.RippleView
		android:id="@+id/yes_ripple_btn_cardview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/message_et"
		android:layout_marginTop="10dp"
		android:layout_alignParentRight="true"
		android:layout_marginRight="8dp"
		app:rv_color="@color/white"
		app:rv_rippleDuration="@integer/rv_rippleDuration">

		<android.support.v7.widget.CardView
			android:id="@+id/yes_btn_cardview"
			android:layout_width="136dp"
			android:layout_height="36dp"
			android:layout_gravity="right"
			app:cardBackgroundColor="@color/colorPrimary">


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansBold
					android:id="@+id/btn_yes"
					android:layout_width="match_parent"
					android:layout_height="36dp"
					android:layout_centerInParent="true"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp"
					android:gravity="center"
					android:text="ارسال"
					android:textColor="@color/white"
					android:textSize="12sp" />

			</RelativeLayout>

		</android.support.v7.widget.CardView>

	</com.andexert.library.RippleView>

	<com.andexert.library.RippleView
		android:id="@+id/no_ripple_btn_cardview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/message_et"

		android:layout_alignParentLeft="true"
		android:layout_marginLeft="8dp"

		android:layout_marginTop="10dp"
		app:rv_color="@color/white"
		app:rv_rippleDuration="@integer/rv_rippleDuration">

		<android.support.v7.widget.CardView
			android:id="@+id/no_btn_cardview"
			android:layout_width="136dp"
			android:layout_height="36dp"
			android:layout_gravity="right"
			app:cardBackgroundColor="@color/colorPrimary">


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansBold
					android:id="@+id/btn_no"
					android:layout_width="match_parent"
					android:layout_height="36dp"
					android:layout_alignParentRight="true"
					android:layout_centerInParent="true"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp"
					android:gravity="center"
					android:text="صرفه‌نظر"
					android:textColor="@color/white"
					android:textSize="12sp" />

			</RelativeLayout>

		</android.support.v7.widget.CardView>

	</com.andexert.library.RippleView>

</RelativeLayout>