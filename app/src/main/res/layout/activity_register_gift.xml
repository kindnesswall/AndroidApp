<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/toolbar_layout"
		android:layout_width="match_parent"
		android:layout_height="56dp">

		<android.support.v7.widget.Toolbar
			android:id="@+id/main_toolbar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentTop="true"
			android:background="@color/colorPrimary"
			android:clipToPadding="false"
			app:contentInsetEnd="0dp"
			app:contentInsetLeft="0dp"
			app:contentInsetRight="0dp"
			app:contentInsetStart="0dp"
			app:theme="@style/MyToolbar" />

		<ImageView
			android:id="@+id/toolbar_app_icon"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"

			android:padding="8dp"
			android:src="@drawable/ic_pink_heart" />

		<hamed_gh.ir.divaaremehrabani.customviews.textviews.TextViewIranSansRegular
			android:id="@+id/toolbar_title_textView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_toRightOf="@+id/toolbar_new_gift_btn"
			android:ellipsize="end"
			android:gravity="center_vertical|right"

			android:singleLine="true"

			android:text="Toolbar Title"
			android:textColor="#FFFFFF"
			android:textSize="16sp"
			android:visibility="gone" />

		<hamed_gh.ir.divaaremehrabani.customviews.textviews.TextViewIranSansRegular
			android:id="@+id/toolbar_new_gift_btn_tv"
			android:layout_width="wrap_content"
			android:layout_height="56dp"
			android:layout_alignParentLeft="true"

			android:drawableRight="@mipmap/ic_action_action_done"
			android:gravity="center_vertical"
			android:paddingLeft="14dp"

			android:paddingRight="14dp"
			android:text="ارسال"

			android:textColor="#FFFFFF"
			android:textSize="13dp" />

	</RelativeLayout>

</RelativeLayout>
