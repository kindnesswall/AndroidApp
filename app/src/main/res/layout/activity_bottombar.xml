<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/toolbar_layout"
		android:layout_width="match_parent"
		android:layout_height="56dp">

		<android.support.v7.widget.Toolbar
			android:id="@+id/main_toolbar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentTop="true"
			android:background="@color/colorPrimary"
			android:clipToPadding="false"
			app:contentInsetEnd="0dp"
			app:contentInsetLeft="0dp"
			app:contentInsetRight="0dp"
			app:contentInsetStart="0dp"
			app:theme="@style/MyToolbar"/>

		<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewDivarMehrabani
			android:id="@+id/toolbar_app_icon"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"

			android:gravity="center"
			android:text=""
			android:textColor="@color/colorAccent"
			android:textSize="26dp"/>

		<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
			android:id="@+id/toolbar_new_gift_btn_tv"
			android:layout_width="wrap_content"
			android:layout_height="56dp"

			android:layout_alignParentLeft="true"
			android:background="?attr/selectableItemBackground"
			android:clickable="true"
			android:drawableRight="@mipmap/ic_add_white_24dp"

			android:gravity="center_vertical"

			android:paddingLeft="14dp"
			android:paddingRight="14dp"

			android:text="هدیه جدید"
			android:textColor="#FFFFFF"/>

		<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
			android:id="@+id/toolbar_title_textView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"

			android:layout_toLeftOf="@id/toolbar_app_icon"
			android:layout_toRightOf="@+id/toolbar_new_gift_btn_tv"

			android:ellipsize="end"
			android:gravity="center_vertical|right"

			android:maxLines="1"

			android:text="Toolbar Title"
			android:textColor="#FFFFFF"
			android:textSize="16sp"
			android:visibility="visible"/>

	</RelativeLayout>

	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	             android:id="@+id/container_body"
	             android:layout_width="match_parent"
	             android:layout_height="match_parent"
	             android:layout_below="@id/toolbar_layout"
	             android:background="@color/transparent"/>

</RelativeLayout>
