<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root_lay"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white">

	<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
		android:id="@+id/rw_phone_number_tv"
		android:layout_width="wrap_content"
		android:layout_height="56dp"

		android:layout_alignParentLeft="true"
		android:layout_marginLeft="6dp"
		android:gravity="center"

		android:text="09353703108"
		android:textColor="@color/black"

		android:textSize="24dp"/>

	<ImageView
		android:id="@+id/rw_deny_icon_iv"
		android:layout_width="36dp"
		android:layout_height="56dp"
		android:paddingTop="14dp"
		android:paddingBottom="14dp"
		android:layout_alignParentRight="true"
		android:src="@mipmap/ic_close_grey600_36dp"/>

	<ImageView
		android:id="@+id/rw_accept_icon_iv"
		android:layout_width="36dp"
		android:layout_height="56dp"
		android:paddingTop="14dp"
		android:paddingBottom="14dp"
		android:layout_toLeftOf="@id/rw_deny_icon_iv"
		android:src="@mipmap/ic_check_grey600_48dp"/>

	<ImageView
		android:id="@+id/rw_sms_icon_iv"
		android:layout_width="36dp"
		android:layout_height="56dp"
		android:paddingTop="14dp"
		android:paddingBottom="14dp"
		android:layout_toLeftOf="@id/rw_accept_icon_iv"
		android:src="@mipmap/ic_message_grey600_36dp"/>

	<ImageView
		android:id="@+id/rw_call_icon_iv"
		android:layout_width="36dp"
		android:layout_height="56dp"
		android:paddingTop="14dp"
		android:paddingBottom="14dp"
		android:layout_toLeftOf="@id/rw_sms_icon_iv"
		android:src="@mipmap/ic_phone_grey600_36dp"/>


	<RelativeLayout android:layout_width="match_parent"
	                android:layout_height="1dp"
	                android:layout_below="@id/rw_phone_number_tv"
	                android:layout_marginBottom="-1dp"
	                android:background="#F1F1F1"/>

</RelativeLayout>