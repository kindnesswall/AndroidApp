                android:layout_height="match_parent">

	<ir.kindnesswall.customviews.textviews.TextViewIranSansRegular
		android:id="@+id/rw_choose_place_ur_here_tv"
		android:layout_width="108dp"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"

		android:layout_marginLeft="8dp"
		android:text="(شما اینجا هستید)"
		android:visibility="invisible"/>

	<ir.kindnesswall.customviews.textviews.TextViewIranSansRegular
		android:id="@+id/rw_choose_place_name_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:layout_marginLeft="6dp"

		android:layout_marginRight="10dp"
		android:layout_toRightOf="@id/rw_choose_place_ur_here_tv"

		android:paddingBottom="8dp"
		android:paddingTop="12dp"
		android:text="تهران"
		android:textColor="@color/black"

		android:textSize="16dp"/>

</RelativeLayout>