<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimary"
                android:gravity="center">


	<ir.kindnesswall.customviews.textviews.TextViewIranSansRegular
		android:id="@+id/kindnesswall_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"

		android:text="دیوار مهربانی"
		android:textSize="24dp"
		android:textColor="@color/white"/>


	<com.rey.material.widget.ProgressView
		android:id="@+id/fragment_progressBar"

		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_below="@id/kindnesswall_tv"
		android:layout_marginTop="12dp"
		android:layout_centerHorizontal="true"

		app:pv_autostart="true"
		app:pv_circular="true"
		app:pv_progressMode="indeterminate"
		app:pv_progressStyle="@style/InDeterminateWhiteCircularProgressDrawableStyle"/>

</RelativeLayout>