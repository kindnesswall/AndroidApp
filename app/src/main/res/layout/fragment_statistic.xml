<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
        android:id="@+id/number_of_user_txt"
        android:layout_width="@dimen/statistic_text_width"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        android:text="تعداد یوزرها:"
        android:textSize="@dimen/statistic_text_size" />

    <ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
        android:id="@+id/number_of_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/number_of_user_txt"
        android:layout_toLeftOf="@id/number_of_user_txt"

        android:text="100000"
        android:textSize="@dimen/statistic_text_size" />

    <ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
        android:id="@+id/number_of_all_gifts_txt"
        android:layout_width="@dimen/statistic_text_width"
        android:layout_height="wrap_content"

        android:layout_alignRight="@id/number_of_user_txt"
        android:layout_below="@id/number_of_user_txt"
        android:layout_marginTop="10dp"

        android:text="تعداد کل هدیه ها تا کنون:"
        android:textSize="@dimen/statistic_text_size" />

    <ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
        android:id="@+id/number_of_all_gifts_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/number_of_all_gifts_txt"
        android:layout_toLeftOf="@id/number_of_all_gifts_txt"

        android:text="100000"
        android:textSize="@dimen/statistic_text_size" />

    <ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
        android:id="@+id/value_of_all_gifts_txt"
        android:layout_width="@dimen/statistic_text_width"
        android:layout_height="wrap_content"

        android:layout_alignRight="@id/number_of_all_gifts_txt"
        android:layout_below="@id/number_of_all_gifts_txt"
        android:layout_marginTop="10dp"

        android:text="ارزش تقریبی مجموع هدیه ها تا کنون:"
        android:textSize="@dimen/statistic_text_size" />

    <ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
        android:id="@+id/value_of_all_gifts_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/value_of_all_gifts_txt"
        android:layout_toLeftOf="@id/value_of_all_gifts_txt"

        android:text="100000"
        android:textSize="@dimen/statistic_text_size" />

    <ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
        android:id="@+id/value_of_all_gifts_toman_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/value_of_all_gifts_tv"
        android:layout_toLeftOf="@id/value_of_all_gifts_tv"

        android:text="تومان"
        android:textSize="@dimen/statistic_text_size" />

</RelativeLayout>