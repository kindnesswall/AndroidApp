<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root_lay"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white">

	<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
		android:id="@+id/rw_sent_request_name_tv"
		android:layout_width="wrap_content"
		android:layout_height="56dp"

		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"

		android:layout_marginBottom="3dp"
		android:layout_marginLeft="6dp"
		android:layout_marginRight="6dp"
		android:layout_marginTop="3dp"

		android:gravity="center"

		android:text="کتاب"
		android:textColor="@color/black"

		android:textSize="16dp"/>

	<RelativeLayout
		android:id="@+id/btn_lay"
		android:layout_width="64dp" android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="4dp">

		<RelativeLayout android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_centerInParent="true">

			<ImageView
				android:id="@+id/rw_btn_icon_iv"
				android:layout_width="24dp" android:layout_height="24dp"
				android:layout_centerVertical="true"
				android:src="@mipmap/ic_close_grey600_36dp"/>

			<ir.hamed_gh.divaremehrabani.customviews.textviews.TextViewIranSansRegular
				android:id="@+id/rw_btn_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"

				android:layout_centerVertical="true"
				android:layout_marginLeft="4dp"

				android:layout_toRightOf="@id/rw_btn_icon_iv"
				android:text="لغو"
				android:textColor="@color/grey_600"
				android:textSize="16dp"/>


		</RelativeLayout>

	</RelativeLayout>

	<RelativeLayout android:layout_width="20dp"
	                android:layout_height="match_parent"
	                android:layout_toRightOf="@id/btn_lay"
	                android:background="@color/orange_500"/>

	<RelativeLayout android:layout_width="match_parent"
	                android:layout_height="1dp"
	                android:layout_below="@id/rw_sent_request_name_tv"
	                android:background="#F1F1F1"/>

</RelativeLayout>