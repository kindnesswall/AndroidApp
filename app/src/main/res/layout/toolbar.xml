<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

	<android.support.v7.widget.Toolbar
		android:id="@+id/main_toolbar"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:background="@color/primary"
		android:clipToPadding="false"
		app:theme="@style/MyToolbar"
		app:contentInsetEnd="0dp"
		app:contentInsetLeft="0dp"
		app:contentInsetRight="0dp"
		app:contentInsetStart="0dp"/>

	<ir.abredanesh.customview.textview.TextViewIranSansRegular
		android:id="@+id/toolbar_title_textView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:ellipsize="end"
		android:singleLine="true"
		android:gravity="center_vertical|right"
		android:layout_marginRight="50dp"
		android:layout_toRightOf="@+id/toolbar_second_iv"
		android:text="Toolbar Title"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
		android:visibility="visible" />

	<ImageView
		android:id="@+id/toolbar_first_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:visibility="gone"
		android:src="@mipmap/ic_arrow_back_white_24dp"/>

	<ImageView
		android:id="@+id/toolbar_second_iv"
		android:layout_width="48dp"
		android:layout_height="48dp"
        android:padding="12dp"
		android:layout_centerVertical="true"
        android:layout_toRightOf="@id/toolbar_first_iv"
		android:visibility="gone"
        android:src="@mipmap/ic_arrow_back_white_24dp"/>

</RelativeLayout>