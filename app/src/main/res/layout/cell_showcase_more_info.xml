<RelativeLayout
    android:paddingLeft="4dp"

    android:layout_width="104dp"
    android:layout_height="150dp"
    android:background="@color/white" xmlns:android="http://schemas.android.com/apk/res/android">

                <ImageView
                    android:id="@+id/cell_movie_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:id="@+id/lay_info_pack"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@id/cell_movie_iv"
                    android:layout_alignRight="@id/cell_movie_iv"
                    android:layout_below="@id/cell_movie_iv"

                    android:background="@color/divider"

                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp">


                    <ir.kindnesswall.customviews.textviews.TextViewIranSansBold
                        android:id="@+id/cell_name_movie_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="پدر خوانده"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"/>

                    <ir.kindnesswall.customviews.textviews.TextViewIranSansBold
                        android:id="@+id/cell_price_movie_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="2dp"

                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="2000"
                        android:textColor="@color/light_black"
                        android:textSize="11sp"
                        android:visibility="gone"/>

                    <ir.kindnesswall.customviews.textviews.TextViewIranSansBold
                        android:id="@+id/showcase_more_info_category_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="2dp"

                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"

                        android:text="درام"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"/>

                </RelativeLayout>


            </RelativeLayout>

